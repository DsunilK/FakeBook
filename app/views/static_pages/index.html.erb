<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= link_to "What's not on your mind?", new_post_path, class:"btn btn-lg btn-primary", id:"create-post-btn" %>

      <!-- Render Posts -->
      <div class="posts">
        <% @posts.each do |post| %>
          <div class="post">
            <div class="post-header">
              <img src="images/ic_account_box_black_24dp_2x.png" alt="">
              <h3><a href="#"><%= post.user.firstname << " " << post.user.lastname %></a></h3>
              <%= link_to "See More", post_path(post.id), class: 'pull-right' %>
            </div>
            <div class="post-body">
              <p><%= post.content %></p>
            </div>
            <hr>
            <div class="post-footer">
              <div class="footer-icon">
                <i class="material-icons">thumb_up</i>
                <span>7</span>
              </div>
              <div class="footer-icon">
                <i class="material-icons">mode_comment</i>
                <span>7</span>
              </div>
              <div class="footer-icon pull-right">
                <i class="material-icons">delete</i>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-4 ads">
      <div class="ad well well-lg">
        <img src="http://via.placeholder.com/250x150" alt="">
        <div>ad text</div>
      </div>
      <div class="ad well well-lg">
        <img src="http://via.placeholder.com/250x150" alt="">
        <div>ad text</div>
      </div>
      <div class="ad well well-lg">
        <img src="http://via.placeholder.com/250x150" alt="">
        <div>ad text</div>
      </div>
      <div class="ad well well-lg">
        <img src="http://via.placeholder.com/250x150" alt="">
        <div>ad text</div>
      </div>
    </div>
  </div>
</div>
